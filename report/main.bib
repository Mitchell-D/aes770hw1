	number = {7},
	urldate = {2023-08-29},
	journal = {Journal of the Atmospheric Sciences},
	author = {King, Michael D. and Radke, Lawrence F. and Hobbs, Peter V.},
	month = apr,
	year = {1990},
	note = {Publisher: American Meteorological Society
Section: Journal of the Atmospheric Sciences},
	pages = {894--908},
	file = {Full Text PDF:/home/krttd/tools/zotero/storage/ZJPSFL3E/King et al. - 1990 - Determination of the Spectral Absorption of Solar .pdf:application/pdf},
}

