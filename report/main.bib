	note = {Publisher: American Meteorological Society
Section: Bulletin of the American Meteorological Society},
	pages = {E1512--E1523},
	file = {Full Text PDF:/home/krttd/tools/zotero/storage/S2SMKJZ3/Maahn et al. - 2020 - Optimal Estimation Retrievals and Their Uncertaint.pdf:application/pdf},
}

