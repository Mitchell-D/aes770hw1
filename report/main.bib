	urldate = {2023-09-02},
	journal = {Bulletin of the American Meteorological Society},
	author = {Maahn, Maximilian and Turner, David D. and Löhnert, Ulrich and Posselt, Derek J. and Ebell, Kerstin and Mace, Gerald G. and Comstock, Jennifer M.},
	month = sep,
